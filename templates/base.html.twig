<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />

        <title>Hit Tracker - {% block page_title %}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset(asset_path ~ '/style/app.css', 'built') }}" type="text/css" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="d-flex flex-column {{ app.request.get('_route')|replace({'_': '-'}) }}">
        {% block nav %}
                {{ include('navbar.html.twig') }}
        {% endblock %}
        <main role="main" class="flex-grow-1 container-fluid">
            {% block messages %}
                {{ include('messages.html.twig') }}
            {% endblock %}

            {% block content %}{% endblock %}
        </main>
        <footer class="container-fluid">
            <div class="row">
            {% block footer %}
                    {{ include('footer.html.twig') }}
            {% endblock %}
            </div>
        </footer>
        {% block javascripts %}
            <script src="{{ asset(asset_path ~ '/js/app.js', 'built') }}"></script>
        {% endblock %}
        {% if 'prod' != app.environment %}
            <!-- <script src="{{ livereload_script_url }}"></script> -->
        {% endif %}
    </body>
</html>
