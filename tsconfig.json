{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "allowJs": true,
    "lib": ["es2018", "dom"],
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["assets/js/*"],
      "*": ["./types/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./assets/**/*"],
  "exclude": ["node_modules", "public", "dist", "out", "vendor"]
}
