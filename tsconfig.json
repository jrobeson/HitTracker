{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,
    "lib": ["es2017", "dom"],
    //"outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./types/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": [
        { "name": "tslint-language-service"}
    ]
  },
  "exclude": [
    "node_modules",
    "public",
    "dist",
    "out",
    "vendor"
  ]
}
