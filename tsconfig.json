{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "allowJs": true,
    "lib": ["es2017", "es2017.object", "dom"],
    //"outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["assets/js/*"],
      "*": ["./types/*"],

    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": [
        { "name": "tslint-language-service"}
    ]
  },
  "include": [
    "./assets/**/*",

  ],
  "exclude": [
    "node_modules",
    "public",
    "dist",
    "out",
    "vendor"
  ]
}
