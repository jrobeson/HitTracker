<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />

        <title>Hit Tracker - {% block page_title %}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/style/app.css') }}" type="text/css" />
        {% endblock %}
        <!-- @TODO : create a favicon
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        -->
    </head>
    <body class="{{ app.request.get('_route')|replace({'_': '-'}) }}">
        <div id="content-wrapper">
            {% block nav %}
                {{ include('navbar.html.twig') }}
            {% endblock %}
            <main role="main" class="container-fluid">
                <div class="col-md-12">
                    {% block messages %}
                        {{ include('messages.html.twig') }}
                    {% endblock %}
                    {% block content %}{% endblock %}
                </div>
            </main>
        </div>
        <footer class="container-fluid">
            {% block footer %}
                <div class="col-md-12">
                    {{ include('footer.html.twig') }}
                </div>
            {% endblock %}
        </footer>
        {% block javascripts %}
            <script src="{{ asset('assets/js/app.js') }}"></script>
        {% endblock %}
        {% if 'prod' != app.environment %}
            <!-- <script src="{{ livereload_script_url }}"></script> -->
        {% endif %}
    </body>
</html>
