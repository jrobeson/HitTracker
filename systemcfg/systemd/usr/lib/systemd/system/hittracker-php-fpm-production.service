[Unit]
Description=HitTracker PHP-FPM (production)
After=syslog.target network.target

[Service]
User=hittracker
Group=hittracker
Type=notify
Environment=SYMFONY_ENV=production
Environment=SYMFONY_DEBUG=0
ExecStart=/usr/sbin/php-fpm --nodaemonize -c /usr/local/share/hittracker/etc/hosted/php-unix-production.ini --fpm-config=/usr/local/share/hittracker/etc/hosted/php-fpm-production.conf
ExecReload=/bin/kill -USR2 $MAINPID
WatchdogSec=30
PrivateTmp=true
ProtectHome=true
ProtectSystem=full
PrivateDevices=true
NoNewPrivileges=true
MemoryDenyWriteExecute=true
ProtectKernelModules=true
ProtectKernelTunables=true
ProtectControlGroups=true
RestrictAddressFamilies=AF_INET AF_INET6 AF_UNIX
RestrictNamespaces=true

[Install]
WantedBy=multi-user.target
