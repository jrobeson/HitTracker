<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- game -->
        <service id="hittracker_game.settings_schema.game" class="LazerBall\HitTracker\GameBundle\Settings\GameSettingsSchema">
            <tag name="sylius.settings_schema" alias="game" />
        </service>
        <service id="hittracker_game.settings_schema.site" class="LazerBall\HitTracker\GameBundle\Settings\SiteSettingsSchema">
            <tag name="sylius.settings_schema" alias="site" />
        </service>
        <service id="hittracker_game.manager.game" class="LazerBall\HitTracker\GameBundle\GameManager">
            <argument type="service" id="hittracker.repository.game" />
        </service>
        <service id="hittracker_game.form.type.list_games" class="LazerBall\HitTracker\GameBundle\Form\Type\ListGamesType">
            <argument type="service" id="hittracker.repository.game" />
            <argument type="service" id="translator" />
            <tag name="form.type" />
        </service>
        <service id="hittracker_game.form.type.game" class="LazerBall\HitTracker\GameBundle\Form\Type\GameType">
            <argument type="service" id="sylius.settings_manager" />
            <argument type="service" id="hittracker_game.form.event_subscriber.game"/>
            <!-- TODO: rename once sylius/resource-bundle allows global configuration -->
            <tag name="form.type" alias="hittracker_game"/>
        </service>
        <service id="hittracker_game.form.type.game_settings" class="LazerBall\HitTracker\GameBundle\Form\Type\GameSettingsType">
            <argument type="service" id="sylius.settings_manager" />
            <!-- TODO: rename once sylius/resource-bundle allows global configuration -->
            <tag name="form.type" alias="hittracker_game_settings"/>
        </service>

        <service id="hittracker_game.form.event_subscriber.game" class="LazerBall\HitTracker\GameBundle\EventListener\GameFormSubscriber">
            <argument type="service" id="hittracker.repository.game" />
        </service>
        <service id="hittracker_game.game_event_listener" class="LazerBall\HitTracker\GameBundle\EventListener\GameEventListener">
            <argument type="service" id="hittracker_pubsub.handler" />
            <tag name="kernel.event_listener" event="hittracker.game.post_create" method="onPostCreate" />
        </service>

        <!-- player -->
        <service id="hittracker_game.form.type.player" class="LazerBall\HitTracker\GameBundle\Form\Type\PlayerType">
            <argument type="service" id="sylius.settings_manager" />
            <argument type="service" id="hittracker.repository.vest" />
            <!-- TODO: rename once sylius/resource-bundle allows global configuration -->
            <tag name="form.type" alias="hittracker_player"/>
        </service>
        <service id="hittracker_game.form.type.player_collection" class="LazerBall\HitTracker\GameBundle\Form\Type\PlayerCollectionType">
            <argument type="service" id="sylius.settings_manager" />
            <!-- TODO: rename once sylius/resource-bundle allows global configuration -->
            <tag name="form.type" alias="hittracker_player_collection"/>
        </service>
        <!-- vest -->
        <service id="hittracker_game.form.type.vest" class="LazerBall\HitTracker\GameBundle\Form\Type\VestType">
            <!-- TODO: rename once sylius/resource-bundle allows global configuration -->
            <tag name="form.type" alias="hittracker_vest"/>
        </service>
    </services>
</container>
