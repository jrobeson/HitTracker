{% extends '@HitTrackerGame/layout.html.twig' %}
{% block content %}
    {% from '@Common/Macros/misc.html.twig' import pagination %}

    <h1>Vests</h1>

    {{ pagination(vests) }}
    <table class="table-striped">
        <thead>
            <tr>
                <th class="col-lg-1">{{ 'ID'|trans }}</th>
                <th class="col-lg-1">{{ 'Radio Id'|trans }}</th>
                <th class="col-lg-1">{{ 'Active?'|trans }}</th>
                <th class="col-lg-1">{{ 'Date Added'|trans }}</th>
                <th class="col-lg-1">{{ 'Options'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for vest in vests %}
            <tr>
                <td class="col-lg-1">{{ vest.id }}</td>
                <td class="col-lg-1">{{ vest.radioId }}</td>
                <td class="col-lg-1">{{ vest.active }}</td>
                <td class="col-lg-1">
                    {{ vest.createdAt|localizeddate(date_format='short', format='MM/dd/y') }}
                </td>
                <td class="col-lg-2">
                    <a href="{{ path('hittracker_vest_update', {id: vest.id}) }}">
                        {{ 'Edit'|trans }}
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <br />
    <a href="{{ path('hittracker_vest_create') }}" class="btn btn-primary">
        {{ 'New vest'|trans }}
    </a>
{% endblock %}
