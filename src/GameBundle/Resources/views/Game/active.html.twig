{% extends 'HitTrackerGameBundle::layout.html.twig' %}
{% block content %}
{% if game %}
    <div class="row hidden-print">
        <strong class="text-center">
            {{ include('HitTrackerGameBundle:Game:print_scores.html.twig') }}
        </strong>
        <a class="btn btn-danger" href="{{ path('hittracker_game_stop') }}" {{ link_attr('PATCH') }} data-params="arena={{ game.arena }}">
            {{ 'Stop Game'|trans }}
        </a>
        {# include('HitTrackerGameBundle:Game:hit_simulator.html.twig') #}
    </div>
    <div class="row">
        {{ include('HitTrackerGameBundle:Game:scores.html.twig') }}
    </div>
{% else %}
    <div class="row">
        <h1 class="text-center">{{ 'There is no active game'|trans }}</h1>
    </div>
    <div class="row">
        <a href="{{ path('hittracker_game_create') }}" class="btn btn-primary">
            {{ 'New Game'|trans }}
        </a>
    </div>
{% endif %}
{% endblock %}
