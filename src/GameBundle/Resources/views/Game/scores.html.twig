<div class="row">
    <div class="col-md-6 col-sm-12">
        <h2 class="text-center">
            {{ 'Game Length'|trans }}:
            {{ '%d:%02d'|format(game.gameLength['hours'], game.gameLength['minutes']) }}
            {{ 'Minutes'|trans }}
        </h2>
    </div>

    <div class="col-md-6 col-sm-12">
        {% if game.active %}
        <h2 class="text-center">
            {{ 'Time Left'|trans }}:
            <span id="game-time-countdown" data-server-time="{{ 'now'|date('U', 'UTC') * 1000 }}" data-game-end-time="{{ game.endsAt.timeStamp * 1000 }}">

            </span>
        </h2>
        {% endif %}
    </div>
</div>
<div class="col-lg-12">
    {% for team in game.teams %}
        <div class="col-md-6 col-sm-12">
            <table class="scores team {{ team|lower|replace({' ': '-'}) }}">
                <thead>
                    <tr>
                        <th colspan="6">
                            <strong class="text-center">
                                {{ team }}
                            </strong>
                        </th>
                    </tr>
                    <tr>
                        <th>{{ '#' }}</th>
                        <th>{{ 'Name'|trans }}</th>
                        {% for zone in 1..3 %}
                            <th>
                                {{ 'Zone'|trans }} {{ zone }}
                            </th>
                        {% endfor %}
                        <th class="player-total">
                            {{ 'Life Credits'|trans }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for player in game.playersByTeam(team) %}
                        <tr id="player-{{ player.id }}">
                            <td class="player-id">
                                {{ loop.index }}
                            </td>
                            <td>{{ player.name }}</td>
                            {% for zone in 1..3 %}
                                <td class="zone-{{ zone }}">
                                    {{ player.hitsInZone(zone) }}
                                </td>
                            {% endfor %}
                            <td class="player-life-credits">
                                {{ player.lifeCredits }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <td colspan="3"></td>
                    <td colspan="2"><p class="text-right">{{ 'Team Total'|trans }}</p></td>
                    <td class="team-total">
                        {{ game.teamLifeCredits(team) }}
                    </td>
                </tfoot>
            </table>
        </div>
    {% endfor %}
</div>
