{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/style/scoreboard.css') }}" type="text/css"/>
{% endblock %}
{% block nav %}{% endblock %}
{% block messages %}{% endblock %}
{% block content %}
    <div class="col-md-12 logo">
        <img class="center-block img-responsive" src="{{ asset('bundles/hittrackergame/images/scoreboard/logo.jpg') }}" />
    </div>
    {% if game %}
        {{ include('@HitTrackerGame/Game/scores.html.twig') }}
        <div class="row">
            {{ include('@HitTrackerGame/Game/activity.html.twig') }}
        </div>
    </div>
    {% else %}
      <h1 class="text-center">{{ 'hittracker.game.none_active'|trans }}</h1>
    {% endif %}
{% endblock %}
{% block footer %}
    <div class="col-md-6">
        <img class="center-block img-responsive" src="{{ asset('bundles/hittrackergame/images/scoreboard/banner-left.jpg') }}"/>
    </div>
    <div class="col-md-6">
        <img class="center-block img-responsive" src="{{ asset('bundles/hittrackergame/images/scoreboard/banner-right.jpg') }}"/>
    </div>
{% endblock %}
