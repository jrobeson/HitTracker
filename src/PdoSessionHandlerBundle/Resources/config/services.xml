<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="pdo_session_handler.pdo_connection" class="PDO">
            <argument>pgsql:host=%pdo_session_handler.database_host%;dbname=%pdo_session_handler.database_name%</argument>
            <argument>%pdo_session_handler.database_user%</argument>
            <argument>%pdo_session_handler.database_password%</argument>
            <call method="setAttribute">
                <argument type="constant">PDO::ATTR_ERRMODE</argument>
                <argument type="constant">PDO::ERRMODE_EXCEPTION</argument>
            </call>
        </service>
        <service id="pdo_session_handler.session_handler" class="Symfony\Component\HttpFoundation\Session\Storage\Handler\PdoSessionHandler">
            <argument type="service" id="pdo_session_handler.pdo_connection" />
            <argument type="collection">
                <argument key="db_id_col">session_id</argument>
                <argument key="db_data_col">session_data</argument>
                <argument key="db_time_col">session_time</argument>
                <argument key="db_lifetime_col">session_lifetime</argument>
            </argument>
        </service>
    </services>
</container>
