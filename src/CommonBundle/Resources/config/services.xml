<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="knp_rad.csrf_link.token_id">link</parameter>
    </parameters>

    <services>
        <service id="pdo_pgsql" class="PDO">
            <argument>pgsql:host=%database_host%;dbname=%database_name%</argument>
            <argument>%database_user%</argument>
            <argument>%database_password%</argument>
            <call method="setAttribute">
                <argument type="constant">PDO::ATTR_ERRMODE</argument>
                <argument type="constant">PDO::ERRMODE_EXCEPTION</argument>
            </call>
        </service>
        <service id="session.handler.pdo" class="Symfony\Component\HttpFoundation\Session\Storage\Handler\PdoSessionHandler">
            <argument type="service" id="pdo_pgsql" />
            <argument type="collection">
                <argument key="db_id_col">session_id</argument>
                <argument key="db_data_col">session_data</argument>
                <argument key="db_time_col">session_time</argument>
                <argument key="db_lifetime_col">session_lifetime</argument>
            </argument>
        </service>
        <service id="twig.extension.intl" class="Twig_Extensions_Extension_Intl">
            <tag name="twig.extension"/>
        </service>
        <service id="knp_rad.twig.link_attributes_extension" class="LazerBall\HitTracker\CommonBundle\Twig\LinkAttributesExtension">
            <argument type="service" id="security.csrf.token_manager"/>
            <argument type="string">%knp_rad.csrf_link.token_id%</argument>
            <tag name="twig.extension"/>
            <tag name="remove-when-missing" service="form.csrf_provider"/>
        </service>
        <service id="knp_rad.csrf.listener" class="LazerBall\HitTracker\CommonBundle\EventListener\CsrfListener">
            <argument type="service" id="security.csrf.token_manager"/>
            <argument type="string">%knp_rad.csrf_link.token_id%</argument>
            <tag name="kernel.event_listener" event="kernel.request"/>
            <tag name="remove-when-missing" service="form.csrf_provider"/>
        </service>
        <service id="hittracker.common.twig.array_split_extension" class="LazerBall\HitTracker\CommonBundle\Twig\ArraySplitExtension">
            <tag name="twig.extension"/>
        </service>

    </services>
</container>
