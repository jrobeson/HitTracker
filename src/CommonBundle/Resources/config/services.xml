<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="twig.intl.extension.class">Twig_Extensions_Extension_Intl</parameter>
        <parameter key="knp_rad.twig.link_attributes_extension.class">HitTracker\CommonBundle\Twig\LinkAttributesExtension</parameter>
        <parameter key="knp_rad.csrf.listener.class">HitTracker\CommonBundle\EventListener\CsrfListener</parameter>
        <parameter key="knp_rad.csrf_link.intention">link</parameter>
    </parameters>

    <services>
        <service id="twig.extension.intl" class="%twig.intl.extension.class%">
            <tag name="twig.extension"/>
        </service>
        <service id="knp_rad.twig.link_attributes_extension" class="%knp_rad.twig.link_attributes_extension.class%">
            <argument type="service" id="form.csrf_provider"/>
            <argument type="string">%knp_rad.csrf_link.intention%</argument>
            <tag name="twig.extension"/>
            <tag name="remove-when-missing" service="form.csrf_provider"/>
        </service>
        <service id="knp_rad.csrf.listener" class="%knp_rad.csrf.listener.class%">
            <argument type="service" id="form.csrf_provider"/>
            <argument type="string">%knp_rad.csrf_link.intention%</argument>
            <tag name="kernel.event_listener" event="kernel.request"/>
            <tag name="remove-when-missing" service="form.csrf_provider"/>
        </service>
    </services>
</container>
