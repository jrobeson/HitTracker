<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="knp_rad.csrf_link.token_id">link</parameter>
    </parameters>

    <services>
        <defaults autowire="true" autoconfigure="true" public="false" />
        <prototype namespace="LazerBall\HitTracker\CommonBundle\" resource="../../*" exclude="../../{Entity,Repository}" />
        <service id="Twig\Extensions\IntlExtension" />

        <service id="LazerBall\HitTracker\CommonBundle\Twig\LinkAttributesExtension">
            <argument key="$csrfTokenId" type="string">%knp_rad.csrf_link.token_id%</argument>
        </service>
        <service id="LazerBall\HitTracker\CommonBundle\EventListener\CsrfListener">
            <argument key="$csrfTokenId" type="string">%knp_rad.csrf_link.token_id%</argument>
        </service>
        <service id="LazerBall\HitTracker\FileUploader">
            <argument type="string">%upload_dir%</argument>
            <argument type="string">%upload_uri_base_prefix%</argument>
        </service>
    </services>
</container>
