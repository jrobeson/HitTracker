{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["es2018"],
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "removeComments": false,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": ["./types/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
